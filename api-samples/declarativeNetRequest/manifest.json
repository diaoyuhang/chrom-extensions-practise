{
  "name": "declarativeNetRequest",
  "manifest_version": 3,
  "version": "1.0",
  "icons": {
    "32": "icons/32.png",
    "72": "icons/72.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.baidu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}